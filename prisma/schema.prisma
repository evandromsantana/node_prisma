generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  status Boolean @default(true)
  name  String
  email String @unique
  Posts Post[]
}

model Post {
  id Int @id @default(autoincrement())
  title String
  userId Int
  author User @relation(fields: [userId], references: [id])
}
